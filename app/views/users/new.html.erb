<section>
  <%= form_tag '/register', method: :post do %>

    <%= label_tag :name %>
    <%= text_field_tag :name, @user.name %>

    <%= label_tag :street_address %>
    <%= text_field_tag :street_address, @user.street_address %>

    <%= label_tag :city %>
    <%= text_field_tag :city, @user.city %>

    <%= label_tag :state %>
    <%= text_field_tag :state, @user.state %>

    <%= label_tag :zip %>
    <%= number_field_tag :zip, @user.zip %>

  	<%= label_tag :email %>
  	<%= text_field_tag :email %>

  	<%= label_tag :password %>
  	<%= password_field_tag :password %>

    <%= submit_tag 'Create User' %>
  <% end %>
</section>
